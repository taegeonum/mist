 /**
  * This is a skeleton protocol for RPC communication from MistMaster to MistDriver.
  */
{
  "namespace": "edu.snu.mist.formats.avro",
  "protocol": "MasterToDriverMessage",
  "types": [
    {
      "name": "TaskRequest",
      "type": "record",
      "fields":
      [
        {
          "name": "taskNum",
          "type": "int"
        },
        {
          "name": "taskCpuNum",
          "type": "int"
        },
        {
          "name": "taskMemSize",
          "type": "int"
        },
        {
          "name": "newRatio",
          "type": "int"
        },
        {
          "name": "reservedCodeCacheSize",
          "type": "int"
        },
        {
          "name": "serializedTaskConfiguration",
          "type": "string"
        }
      ]
    }
  ],
  "messages":
  {
    "requestNewTask": {
      "request": [
        {
          "name": "taskRequest",
          "type": "TaskRequest"
        }
      ],
      "response": "null"
    },
    "saveJarInfo": {
      "request": [
        {
          "name": "appId",
          "type": "string"
        },
        {
          "name": "jarPaths",
          "type":
          {
            "type": "array",
            "items": "string"
          }
        }
      ],
      "response": "boolean"
    },
    "retrieveJarInfo": {
      "request": [],
      "response": {
        "type": "map",
        "values": {
          "type": "array",
          "items": "string"
        }
      }
    },
    "retrieveRunningTaskInfo": {
      "request": [],
      "response": {
        "type": "array",
        "items": "string"
      }
    }
  }
}