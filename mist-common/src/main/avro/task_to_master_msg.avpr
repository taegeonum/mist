 /**
  * This is a skeleton protocol for RPC communication from MistTask to MistMaster.
  *
  */
{
  "namespace": "edu.snu.mist.formats.avro",
  "protocol": "TaskToMasterMessage",
  "types":[
    {
      "name": "GroupStats",
      "type": "record",
      "fields": [
        {
          "name": "AppId",
          "type": "string"
        },
        {
          "name": "GroupId",
          "type": "string"
        },
        {
          "name": "GroupLoad",
          "type": "double"
        },
        {
          "name": "GroupQueryNum",
          "type": "int"
        }
      ]
    },
    {
      "name": "TaskStats",
      "type": "record",
      "fields": [
        {
          "name": "TaskLoad",
          "type": "double"
        },
        {
          "name": "GroupStatsMap",
          "type": {
            "type": "map",
            "values": "GroupStats"
          }
        }
      ]
    },
    {
      "name": "RecoveryInfo",
      "type": "record",
      "fields":
      [
        {
          "name": "RecoveryGroupList",
          "type": {
            "type": "array",
            "items": "string"
          }
        }
      ]
    }
  ],
  "messages": {
    "createGroup":
    {
      "request":
      [
        {
          "name": "taskHostname",
          "type": "string"
        },
        {
          "name": "appId",
          "type": "string"
        }
      ],
      "response": "string"
    },
    "updateTaskStats":
    {
      "request": [
        {
          "name": "taskHostname",
          "type": "string"
        },
        {
          "name": "updatedTaskStats",
          "type": "TaskStats"
        }
      ],
      "response": "boolean"
    },
    "pullRecoveringGroups":
    {
      "request": [
        {
          "name": "taskHostname",
          "type": "string"
        }
      ],
      "response": "RecoveryInfo"
    }
  }
}